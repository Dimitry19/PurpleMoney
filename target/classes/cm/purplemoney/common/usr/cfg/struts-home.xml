<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
 	
	<package name="home" namespace="/" extends="common">		
		<action name="homeAction" class="loginHomeAction" method="home">
			<interceptor-ref name="sessionInterceptor" />
			<result name="success">/common/home/home.jsp</result>
			<result name="sessionexpired" >/common/home/session-error.jsp</result>
		</action>
		<action name="logoutAction" class="loginHomeAction" method="logout">
			<result name="success">/common/home/index.jsp</result>
		</action>
		<action name="timeout" class="loginHomeAction">
			<result name="success">/common/home/session-error.jsp</result>
		</action>
	</package>
</struts>