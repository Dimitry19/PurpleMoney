<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
 
<struts>
 	
	<package name="loans" namespace="/" extends="common">
		<action name="loansAction" class="loanAction" method="loans">
			<result name="success">/loan/pages/ajax/loans.jsp</result>
			<result name="error">/common/home/tables.jsp</result>
		</action>
		<action name="loanAddAction" class="loanAction" method="add">
			<result name="success">/loan/pages/ajax/loans.jsp</result>
			<result name="error">/common/home/tables.jsp</result>
		</action>

		<action name="autocompleteMember" class="memberAction" method="autocompleteMember">
			<result type="json" name="success">
				<param name="root">membersNames</param>
			</result>
		</action>
	</package>
</struts>